@model IEnumerable<ProjetoTCC.Models.Medico>

@{
    ViewData["Title"] = "ListaMedico";
}

<h2>Médicos Cadastrados</h2>

<p>
    <a asp-action="CadastrarMedico">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NOME_MED)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TEL_MED)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CEL_MED)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMAIL_MED)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF_MED)
            </th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NOME_MED)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TEL_MED)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CEL_MED)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMAIL_MED)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF_MED)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditarMedico", new {  id=item.COD_MED  }) |
                @Html.ActionLink("Detalhes", "DetalhesMedico", new { id=item.COD_MED }) |
                @Html.ActionLink("Deletar", "DeletarMedico", new { id=item.COD_MED })
            </td>
        </tr>
}
    </tbody>
</table>
