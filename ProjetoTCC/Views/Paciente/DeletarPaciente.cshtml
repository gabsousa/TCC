<!------ Include the above in your HEAD tag ---------->
<style>
    section {
        display: inline-block;
    }
</style>

<section>
    <!-- Page content -->
    <div id="page-content-wrapper">
        <!-- Keep all page content within the page-content inset div! -->
        <div class="page-content inset">
            <div class="row">
                <div class="col-md-12">
                    <p class="well lead" style="margin-left:1%;">Deletar Paciente</p>
                    <div class="container">
                        <div class="row">
                            <!-- div da esquerda -->

                            <div class="col-sm-8 contact-form">
                                <!-- div da direita -->
                                <form id="contact" method="post" class="form" role="form">
                                    <div class="row">
                                        <div class="col-xs-6 col-md-12 form-group">
                                            <input asp-for="NOME_PAC" class="form-control" placeholder="Nome" readonly />
                                            <span asp-validation-for="NOME_PAC" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-4 form-group">
                                            <input asp-for="DATANASC_PAC" type="date" class="form-control" readonly />
                                            <span asp-validation-for="DATANASC_PAC" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-2 form-group">
                                            <input asp-for="IDADE_PAC" class="form-control" placeholder="Idade" readonly />
                                            <span asp-validation-for="IDADE_PAC" class="text-danger"></span>
                                        </div>

                                        <label class="control-label col-sm-1">Gênero</label>
                                        <div class="col-sm-1">
                                            <label class="radio-inline">
                                                <input type="radio" asp-for="SEXO_PAC" value="F" readonly>Feminino
                                                <input type="radio" asp-for="SEXO_PAC" value="M" readonly>Masculino
                                            </label>
                                            <br />
                                            <br />
                                        </div>

                                        <div class="col-xs-4 col-md-6 form-group" style="margin-left">
                                            <input asp-for="NOME_RESP" class="form-control" placeholder="Nome do Responsável" readonly />
                                            <span asp-validation-for="NOME_RESP" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-3 form-group">
                                            <input asp-for="TEL_RESP" class="form-control" placeholder="Telefone" readonly />
                                            <span asp-validation-for="TEL_RESP" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-3 form-group">
                                            <input asp-for="CEL_RESP" class="form-control" placeholder="Celular" readonly />
                                            <span asp-validation-for="CEL_RESP" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-6 form-group">
                                            <input asp-for="RESP_DOIS" class="form-control" placeholder="Nome do Responsável 2" readonly />
                                            <span asp-validation-for="RESP_DOIS" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-3 form-group">
                                            <input asp-for="TEL_DOIS" data-mask="(00) 00000-0000" class="form-control" placeholder="Telefone 2" readonly />
                                            <span asp-validation-for="TEL_DOIS" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-10 form-group">
                                            <input asp-for="EMAIL_RESP" class="form-control" placeholder="email@exemplo.com" readonly />
                                            <span asp-validation-for="EMAIL_RESP" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-4 form-group">
                                            <input asp-for="CPF_RESP" class="form-control" placeholder="CPF do Responsável" readonly />
                                            <span asp-validation-for="CPF_RESP" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-10 form-group">
                                            <input asp-for="RUA_PAC" class="form-control" placeholder="Rua" readonly />
                                            <span asp-validation-for="RUA_PAC" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-2 form-group">
                                            <input asp-for="NUM_PAC" class="form-control" placeholder="Número" readonly />
                                            <span asp-validation-for="NUM_PAC" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-3 form-group">
                                            <input asp-for="CEP_PAC" class="form-control" placeholder="CEP" readonly />
                                            <span asp-validation-for="CEP_PAC" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-4 form-group">
                                            <input asp-for="BAIRRO_PAC" class="form-control" placeholder="Bairro" readonly />
                                            <span asp-validation-for="BAIRRO_PAC" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-4 form-group">
                                            <input asp-for="MUN_PAC" class="form-control" placeholder="Município" readonly />
                                            <span asp-validation-for="MUN_PAC" class="text-danger"></span>
                                        </div>

                                        <div class="col-xs-4 col-md-2 form-group">
                                            <input asp-for="UF_PAC" class="form-control" placeholder="UF" readonly />
                                            <span asp-validation-for="UF_PAC" class="text-danger"></span>
                                        </div>

                                    </div>
                                    <br />

                                    <div class="row">
                                        <div class="col-xs-12 col-md-12 form-group">
                                            <button type="submit" class="btn btn-primary">Deletar</button>
                                        </div>
                                    </div>
                                </form>
                            </div> <!-- fim div da direita -->
                        </div> <!-- fim div da esquerda -->
                    </div>
                    <p class="well lead" style="margin-left:1%;">© 2019 Omega IT Developers Systems</a></p>
                </div>
            </div>
        </div>
    </div>

</section>
